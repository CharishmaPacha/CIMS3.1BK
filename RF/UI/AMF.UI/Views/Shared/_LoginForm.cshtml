@using System.Data
@using System.Xml.Linq;
<div class="amf-login-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="amf-login-form-heading">
                    <img src="~/Content/Images/@AMF.UI.Helpers.Constants.FormTitleLogoFileName" alt="image">
                    <p>@AMF.UI.Helpers.Constants.FormTitleText</p>
                </div>
            </div>
        </div>
      
    </div>
    <div class="container">
        <div class="amf-login-input-form amf-form-container-tablet">
            <div class="row">
                <div class="col-md-6 col-xs-12" style="border-right:1px solid #ccc;">
                    <div class="form-group">
                        <input type="text" autofocus required name="UserName" tabindex="1" placeholder="Username">
                        <label for="Username">Username</label>
                    </div>
                    <div class="form-group">
                        <input type="Password" required name="Password" tabindex="2" placeholder="Password">
                        <label for="Password">Password</label>
                    </div>
                    <div class="form-group">
                        <select required name="Environment" tabindex="4" class="form-control js-amf-ui-select-environment">
                            @{
                                List<System.Collections.Generic.KeyValuePair<string, string>> environmentlist = AMF.UI.Helpers.Utility.GetEnvironmentList(Server);
                                foreach (var item in environmentlist)
                                {
                                    <option value="@item.Value">@item.Key</option>
                                }
                            }
                        </select>
                        <label for="Environment">Environment</label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" tabindex="4">Login</button>
                    </div>
                </div>
                <div class="col-md-6 col-xs-12">
                    <div class="form-group">
                        <div class="amf-login-copyright">
                            <p>@AMF.UI.Helpers.Constants.PoweredByText</p>
                            <p>IP Address: @Request.UserHostAddress</p>
                            <p>@AMF.UI.Helpers.Constants.ApplicationNameText</p>
                            <p>Version: @AMF.UI.Helpers.Constants.ApplicationVersion</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


